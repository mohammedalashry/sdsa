{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "nvm-use": "nvm use $(Get-Content ./.nvmrc)",
    "build": "tsc && tsc-alias",
    "nodemon": "nodemon --watch src --exec \"ts-node src/server.ts\"",
    "start": "node -r ./tsconfig-paths-bootstrap.js dist/server.js",
    "dev": "nodemon src/server.ts",
    "migrate:postgres": "npx prisma migrate dev",
    "reset:postgres": "npx prisma migrate reset --force",
    "prisma:studio": "npx prisma studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "jest --testPathPattern=performance",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "sync:leagues": "ts-node --require tsconfig-paths/register src/scripts/run-syncer.ts leagues",
    "sync:matches": "ts-node --require tsconfig-paths/register src/scripts/run-syncer.ts matches",
    "sync:teams": "ts-node --require tsconfig-paths/register src/scripts/run-syncer.ts teams",
    "sync:players": "ts-node --require tsconfig-paths/register src/scripts/run-syncer.ts players",
    "sync:coaches": "ts-node --require tsconfig-paths/register src/scripts/run-syncer.ts coaches",
    "sync:referees": "ts-node --require tsconfig-paths/register src/scripts/run-syncer.ts referees",
    "sync:standings": "ts-node --require tsconfig-paths/register src/scripts/run-syncer.ts standings",
    "sync:all": "ts-node --require tsconfig-paths/register src/scripts/run-syncer.ts all",
    "sync:match-details": "ts-node --require tsconfig-paths/register src/scripts/sync-match-details.ts",
    "check:match-data": "ts-node --require tsconfig-paths/register src/scripts/check-match-data-availability.ts",
    "manage:match-details": "ts-node --require tsconfig-paths/register src/scripts/manage-match-details.ts",
    "resync:match-details": "npm run manage:match-details -- resync-current",
    "manage:teams": "ts-node --require tsconfig-paths/register src/scripts/manage-teams.ts",
    "teams:clear": "npm run manage:teams -- clear",
    "teams:sync": "npm run manage:teams -- sync",
    "manage:coaches": "ts-node --require tsconfig-paths/register src/scripts/manage-coaches.ts",
    "coaches:clear": "npm run manage:coaches -- clear",
    "coaches:sync": "npm run manage:coaches -- sync",
    "coaches:sync-all": "npm run manage:coaches -- sync-all",
    "manage:players": "ts-node --require tsconfig-paths/register src/scripts/manage-players.ts",
    "players:clear": "npm run manage:players -- clear",
    "players:sync": "npm run manage:players -- sync",
    "players:sync-all": "npm run manage:players -- sync-all",
    "players:missing": "npm run manage:players -- missing",
    "manage:referees": "ts-node --require tsconfig-paths/register src/scripts/manage-referees.ts",
    "referees:clear": "npm run manage:referees -- clear",
    "referees:sync": "npm run manage:referees -- sync",
    "teams:sync-specific": "npm run manage:teams -- sync-specific --tournamentId=840 --ids=2152,1576",
    "test:matches": "ts-node --require tsconfig-paths/register src/scripts/test-matches-limit.ts",
    "collect-data": "ts-node src/scripts/collect-korastats-data.ts",
    "update-data": "ts-node src/scripts/update-korastats-data.ts",
    "sync-specific": "ts-node src/scripts/sync-specific-data.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/mongoose": "^5.11.96",
    "@types/multer": "^2.0.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "i18next": "^25.3.2",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.8.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemon": "^3.1.10",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "prisma": "^6.13.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "prisma": {
    "schema": "./src/db/prismadb/prisma/schema.prisma"
  }
}
